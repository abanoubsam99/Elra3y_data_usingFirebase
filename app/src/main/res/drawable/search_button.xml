<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" tools:ignore="MissingDefaultResource">
    <item android:state_pressed="true">


        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            >
            // to control the color
            <gradient
                android:startColor="@color/Blue2"
                android:endColor="@color/Blue2"
                android:angle="0"/>

            //تحدب الشكل الاطراف
            <corners  android:radius="30sp"/>

            // كم تبعد الكلام بداخل الشكل عن كل زاويه
            <padding
                android:bottom="2pt"
                android:left="6pt"
                android:right="10pt"
                android:top="2pt"/>

            //الحافه بتاعه الشكل لون مختلف عن الشكل
            <stroke  android:color="@android:color/white" android:width="1.5sp"/>


        </shape>
    </item>
    <item android:state_pressed="false">


        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:visible="true"
            >
            // to control the color
            <gradient
                android:startColor="@color/Blue2"
                android:endColor="@color/Blue2"
                android:angle="0"/>

            //تحدب الشكل الاطراف
            <corners  android:radius="30sp"/>

            // كم تبعد الكلام بداخل الشكل عن كل زاويه
            <padding
                android:bottom="2pt"
                android:left="6pt"
                android:right="10pt"
                android:top="2pt"/>

            //الحافه بتاعه الشكل لون مختلف عن الشكل
            <stroke  android:color="@android:color/black" android:width="1.5sp"/>


        </shape>

    </item>
</selector>